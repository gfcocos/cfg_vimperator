"js手动加载
source ~/cfg_vimperator/plugins/_smooziee.js
source ~/cfg_vimperator/plugins/yetmappings.js
"source ~/cfg_vimperator/plugins/asdfghjkl.js
"source ~/cfg_vimperator/plugins/clock.js
source ~/cfg_vimperator/plugins/google-search.js
source ~/cfg_vimperator/plugins/history-search-backward.js
source ~/cfg_vimperator/plugins/longcat.js

"修改前导按键
let mapleader=','

"设置提示字符
"set hintchars=abcdefghijklmnopqrstuvwyz
set hintchars=asdfjkl

"聚焦设置
set focuscontent

"一般都后台打开相关网页
noremap f F


",a打开附件对话框
noremap <Leader>a :dialog<Space>addons<Return>
noremap <Leader>d :dialog downloads<CR>
noremap <Leader>b :open bentry<CR>
noremap <Leader>t :tabnew<CR><c-l>


",r重启firefox
noremap <Leader><Leader>r :restart<Return>
noremap <Leader>r :reload<Return>
"x关闭当前标签
noremap x :tabclose<CR>
"J下一个标签
noremap J :tabnext<CR>
"K上一个标签
noremap K :tabprevious<CR>
noremap <Leader>1 :tabfirst<CR>
noremap <Leader>0 :tablast<CR>



"j下移5格 noremap j 5j
"k上移5格 noremap k 5k
"由_smooziee.js托管

",x关闭QQ标签
noremap <Leader>x :tabclose webqq<CR>
",qq打开webqq
noremap <Leader>qq :tabopen http://w.qq.com/login.html<CR>
",git打开github标签页
noremap <Leader>git :tabopen github.com<CR>
",m打开gmail
noremap <leader>m :tabopen mail.google.com<CR>
",m打开google
noremap <leader>gg :tabopen https://www.google.com.hk/webhp?client=aff-1616dh&newwindow=1&channel=t4<CR>




